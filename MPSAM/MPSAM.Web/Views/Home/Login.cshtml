@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login Admin</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../images/admin1.jpg');">
            <div class="wrap-login100 p-t-50 p-b-0">
                <form class="login100-form validate-form">
                    <div class="login100-form-avatar">
                        <img src="../Admin-icon.png" alt="AVATAR">
                    </div>
                    <span class="login100-form-title p-t-20 p-b-45">
                        Administrator
                    </span>
                    <div class="wrap-input100 validate-input m-b-10" data-validate="Introducerea adresei de e-mail este necesară">
                        <input class="input100" type="text" name="email" id="email" placeholder="Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-user"></i>
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-10" data-validate="Introducerea parolei este necesară">
                        <input class="input100" type="password" name="password" id="password" placeholder="Parola">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock"></i>
                        </span>
                    </div>
                    <div class="container-login100-form-btn p-t-10">
                        <input type="button" value="Autentificare" class="login100-form-btn" onclick="Validate()">
                    </div>
                    <div class="text-center w-full p-t-25 p-b-80">
                        <a href="#" class="txt1">

                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
  function Validate() {
    $.ajax(
    {
      type: "POST",
      url: '@Url.Action("Validate", "Home")',
      data: {
        email: $('#email').val(),
        password: $('#password').val()
      },
      error: function (result) {
        alert("There is a Problem, Try Again!");
      },
      success: function (result) {
        console.log(result);
        if (result.status == true) {
          window.location.href = '@Url.Action("Index", "Home")';
        }
        else {
          alert(result.message);
        }
      }
    });
  }
    </script>
</body>
</html>