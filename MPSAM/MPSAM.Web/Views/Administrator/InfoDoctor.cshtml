@model MPSAM.Web.ViewModels.InfoDoctorViewModel
@{
    ViewBag.Title = "InfoDoctor";
    Layout = "~/Views/Administrator/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .button {
            background-color: #00BCD4;
            position: absolute;
            top: 10px;
            right: 10px;
            border: none;
            color: white;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="tab-content">
            <center><h3>Informatii dr. @Model.Doctor.Nume @Model.Doctor.Prenume</h3></center>
            <div id="home" class="tab-pane fade in active">
                <br />
                <br />
                <dl class="dl-horizontal" style="font-size:20px;">
                    <dt>Nume</dt>
                    <dd>@Model.Doctor.Nume @Model.Doctor.Prenume</dd>
                    <dt>Email</dt>
                    <dd>@Model.Doctor.Email</dd>
                    <dt>Telefon</dt>
                    <dd>@Model.Doctor.Telefon</dd>
                    <dt>Cod parafa</dt>
                    <dd>@Model.Doctor.CodParafa</dd>
                    <dt>Cabinet</dt>
                    <dd>@Model.Doctor.Cabinet</dd>
                    <dd></dd>
                    <dt></dt>
                </dl>
            </div>
        </div>
    </div>
</body>
</html>


